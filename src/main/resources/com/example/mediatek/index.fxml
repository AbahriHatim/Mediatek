<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.mediatek.Contoller.IndexController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Menu bar for navigation -->
    <top>
        <MenuBar>
            <Menu text="Navigation">
                <MenuItem text="Facture" onAction="#showFacture"/>
                <MenuItem text="Client" onAction="#showClient"/>
                <MenuItem text="Produit" onAction="#showProduit"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Main content area (will be replaced with the relevant view) -->
    <center>
        <AnchorPane fx:id="contentPane"/>
    </center>
</BorderPane>
